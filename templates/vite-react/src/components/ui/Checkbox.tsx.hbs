import { useField } from 'informed';
import { cn } from '@/utils/cn';

export interface CheckboxProps {
  name: string;
  label?: string;
  hint?: string;
  required?: boolean;
  disabled?: boolean;
  className?: string;
  validate?: (value: unknown) => string | undefined;
}

export function Checkbox({
  name,
  label,
  hint,
  required,
  disabled,
  className,
  validate,
}: CheckboxProps) {
  const { fieldState, fieldApi, render, ref } = useField<boolean>({
    name,
    validate,
  });

  const { value, error, showError } = fieldState;
  const { setValue, setTouched } = fieldApi;

  return render(
    <div className="flex items-start">
      <div className="flex items-center h-5">
        <input
          ref={ref}
          id={name}
          name={name}
          type="checkbox"
          checked={Boolean(value)}
          onChange={(e) => setValue(e.target.checked)}
          onBlur={() => setTouched(true)}
          disabled={disabled}
          required={required}
          className={cn(
            'h-4 w-4 rounded border-gray-300 text-primary-600',
            'focus:ring-2 focus:ring-primary-500 focus:ring-offset-0',
            'disabled:cursor-not-allowed disabled:opacity-50',
            showError && error && 'border-red-500',
            className
          )}
        />
      </div>
      {(label || hint || (showError && error)) && (
        <div className="ml-2">
          {label && (
            <label htmlFor={name} className="text-sm font-medium text-gray-700 cursor-pointer">
              {label}
              {required && <span className="text-red-500 ml-1">*</span>}
            </label>
          )}
          {showError && error && <p className="text-sm text-red-600">{error}</p>}
          {hint && !(showError && error) && <p className="text-sm text-gray-500">{hint}</p>}
        </div>
      )}
    </div>
  );
}
